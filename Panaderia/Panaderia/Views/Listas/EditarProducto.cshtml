@model Panaderia.Models.Producto

@{ ViewBag.Title = "Editar Producto"; }

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="display-6 mb-1">
                            <i class="bi bi-pencil-square me-2"></i>Editar Producto
                        </h2>
                        <p class="text-muted">Modifica los datos del producto</p>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdProducto)

                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                                    @Html.LabelFor(model => model.Nombre, "Nombre del producto")
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Descripción" })
                                    @Html.LabelFor(model => model.Descripcion, "Descripción del producto")
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", placeholder = "Precio", type = "number", step = "0.01" })
                                    @Html.LabelFor(model => model.Precio, "Precio del producto")
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", placeholder = "Stock", type = "number" })
                                    @Html.LabelFor(model => model.Stock, "Stock disponible")
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-check mb-3">
                                    @Html.CheckBoxFor(model => model.Estado, new { @class = "form-check-input" })
                                    @Html.LabelFor(model => model.Estado, "Estado activo", new { @class = "form-check-label" })
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("ListarProductos")" class="btn btn-light">Cancelar</a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-lg me-2"></i>Actualizar Producto
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.2s ease-in-out;
    }

    .display-6 {
        font-weight: 600;
        color: #212529;
    }

    .form-floating > .form-control {
        height: calc(3.5rem + 2px);
        line-height: 1.25;
    }

    .form-floating > textarea.form-control {
        height: 100px;
    }

    .form-floating > .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-weight: 500;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-light {
        background-color: #f8f9fa;
        border-color: #f8f9fa;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }
</style>