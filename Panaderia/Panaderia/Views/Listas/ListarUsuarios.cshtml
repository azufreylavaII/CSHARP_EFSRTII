@model IEnumerable<Panaderia.Models.Usuario>

@{ ViewBag.Title = "Lista de Usuarios"; }

<h2>Lista de Usuarios</h2>

<p>
    <a href="@Url.Action("CrearUsuario")" class="btn btn-primary">Crear Usuario</a>
    <a href="@Url.Action("ListarProductos")" class="btn btn-success">Lista de Productos</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Rol</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
<tr>
    <td>@usuario.nombre</td>
    <td>@usuario.correo</td>
    <td>@usuario.direccion</td>
    <td>@usuario.telefono</td>
    <td>@usuario.rol</td>
    <td>@usuario.fecha_registro.ToString("dd/MM/yyyy")</td>
    <td>
        <a href="@Url.Action("EditarUsuario", new { id = usuario.id_usuario })" class="btn btn-warning">Editar</a>
        <a href="@Url.Action("EliminarUsuario", new { id = usuario.id_usuario })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este usuario?');">Eliminar</a>
    </td>
</tr>}
    </tbody>
</table>