@model Panaderia.Models.Usuario

@{
    ViewBag.Title = "Login";
}


<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff8c42;
            --background-color: #fff9f5;
        }

        body {
            background-color: var(--background-color);
            min-height: 100vh;
        }

        .auth-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .auth-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-icon {
            width: 80px;
            height: 80px;
            background-color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            color: white;
            font-size: 2rem;
        }

        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 2px solid #eee;
            padding: 0.8rem;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(255, 140, 66, 0.25);
            }

        .btn-auth {
            background-color: var(--primary-color);
            color: white;
            padding: 0.8rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

            .btn-auth:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(255, 140, 66, 0.3);
                background-color: #ff7a2e;
            }

        .auth-link {
            text-align: center;
            display: block;
            color: var(--primary-color);
            text-decoration: none;
            margin-top: 1rem;
            transition: color 0.3s ease;
        }

            .auth-link:hover {
                color: #ff7a2e;
            }

        .alert {
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <!-- Login Form -->
    <div class="auth-container" id="loginForm">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-icon">
                    <i class="fas fa-user"></i>
                </div>
                <h2>Iniciar Sesión</h2>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @ViewBag.Mensaje
                </div>
            }

            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    @Html.LabelFor(model => model.correo, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.correo, new { @class = "form-control", placeholder = "Ingresa tu correo" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.contrasena, new { @class = "form-label" })
                    @Html.PasswordFor(model => model.contrasena, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                </div>

                <button type="submit" class="btn btn-auth">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                </button>

                <a href="@Url.Action("Registrar", "Usuarios")" class="auth-link">
                    ¿No tienes cuenta? Regístrate aquí
                </a>
            }
        </div>
    </div>
