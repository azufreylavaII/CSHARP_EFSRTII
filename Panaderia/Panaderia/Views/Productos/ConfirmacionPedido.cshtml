@model Panaderia.Models.Pedido

@{
    ViewBag.Title = "Confirmación de Pedido";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .confirmation-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

        .success-icon {
            font-size: 4rem;
            color: #28a745;
            margin-bottom: 1.5rem;
            animation: scale-in 0.5s ease-out;
        }

        .order-number {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 10px;
            margin: 1.5rem 0;
            font-size: 1.2rem;
            border: 2px dashed #dee2e6;
        }

        .continue-shopping-btn {
            padding: 0.8rem 2rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .continue-shopping-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,123,255,0.3);
        }

        .thank-you-text {
            color: #2c3e50;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .confirmation-message {
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .error-message {
            color: #dc3545;
            padding: 1rem;
            border: 1px solid #dc3545;
            border-radius: 8px;
            margin: 1rem 0;
        }

        @@keyframes scale-in {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .page-header {
            background-color: #f8e5da;
            padding: 2rem 0;
            margin-bottom: 2rem;
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">
    <div class="page-header">
        <h2 class="display-4">Confirmación de Pedido</h2>
    </div>

    <div class="container">
        <div class="confirmation-container">
            @if (Model != null)
            {
                <i class="fas fa-check-circle success-icon"></i>
                <h3 class="thank-you-text">¡Gracias por tu compra!</h3>
                <p class="confirmation-message">Tu pedido ha sido registrado con éxito y está siendo procesado.</p>

                <div class="order-number">
                    <strong>Número de Pedido:</strong><br>
                    <span class="fs-4">#@Model.IdPedido</span>
                </div>

                <p class="text-muted mb-4">
                    Guarda este número para cualquier consulta sobre tu pedido.
                </p>
            }
            else
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Error: No se encontró el pedido.
                </div>
            }

            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary continue-shopping-btn">
                <i class="fas fa-shopping-basket me-2"></i>
                Seguir Comprando
            </a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>