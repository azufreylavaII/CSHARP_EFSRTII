@model IEnumerable<Panaderia.Models.Pedido>
@{
    ViewBag.Title = "Gestión de Pedidos";
}

<div class="container py-4">
    <!-- Encabezado con estadísticas -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="display-6 text-primary mb-0">
                <i class="bi bi-clipboard-check me-2"></i>Pedidos Pendientes
            </h2>
            <p class="text-muted">Gestiona los pedidos activos de la panadería</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("DescargarPedidosPDF", "Pedido")" class="btn btn-danger">
                <i class="bi bi-file-pdf me-2"></i>Descargar Reporte
            </a>
        </div>
    </div>

    <!-- Dashboard de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Pedidos</h6>
                    <h2 class="card-title mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Ventas</h6>
                    <h2 class="card-title mb-0">S/. @Model.Sum(p => p.Total).ToString("F2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Pedidos de Hoy</h6>
                    <h2 class="card-title mb-0">@Model.Count(p => p.FechaPedido.Date == DateTime.Today)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de pedidos -->
    <div class="row">
        @foreach (var pedido in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-bag me-2"></i>Pedido #@pedido.IdPedido
                            </h5>
                            <span class="badge bg-warning text-dark">@pedido.Estado</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-2">
                                <i class="bi bi-calendar me-2"></i>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")
                            </small>
                            <small class="text-muted d-block mb-2">
                                <i class="bi bi-cash-coin me-2"></i>S/. @pedido.Total.ToString("F2")
                            </small>
                            <small class="text-muted d-block">
                                <i class="bi bi-credit-card me-2"></i>@pedido.MetodoPago
                            </small>
                        </div>

                        <form action="@Url.Action("EditarEstado", "Pedido")" method="post" class="mt-3">
                            <input type="hidden" name="id" value="@pedido.IdPedido" />
                            <div class="mb-3">
                                <label class="form-label small text-muted">Actualizar Estado</label>
                                <select name="nuevoEstado" class="form-select form-select-sm mb-2">
                                    <option value="En preparación">En preparación</option>
                                    <option value="Listo para entrega">Listo para entrega</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-arrow-clockwise me-2"></i>Actualizar Estado
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.5em 0.8em;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
            transform: translateY(-2px);
        }

    .display-6 {
        font-weight: 600;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }

    /* Estilos para las tarjetas de estadísticas */
    .card.bg-primary {
        background: linear-gradient(45deg, #0d6efd, #0b5ed7) !important;
    }

    .card.bg-success {
        background: linear-gradient(45deg, #198754, #157347) !important;
    }

    .card.bg-info {
        background: linear-gradient(45deg, #0dcaf0, #0aa2c0) !important;
    }
</style>